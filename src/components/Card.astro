---
interface Props {
    name: string;
    place: string | undefined;
    photo: string;
    important: boolean;
}
const { name, place, photo, important } = Astro.props;
---

<div
    class:list={[
        "item_c text-light text-center rounded-4",
        { "bg-important": important, "bg-non-important": !important },
    ]}
>
    <img src={photo} alt="object" />
    <div class="text">
        <h3 class="mt-3">
            {name}
        </h3>
        <p>{place}</p>
    </div>

    <button class="button">Reclaim</button>
</div>
<style>
    .item_c {
        height: 20.5rem;
        overflow: hidden;
    }

    .item_c:hover{
        box-shadow: 0 .5rem 0.5rem 0.5rem rgba(0, 0, 0, 0.2);
    }

    .text {
        margin: 0 1rem;
    }
    img {
        height: 10rem;
        width: 100%;
        object-fit: cover;
    }
    button{
        margin-top: 1.5rem;
        font-size: 1rem;
    }
</style>
