---
interface Props {
    name: string;
    place: string | undefined;
    photo: string;
    important: boolean;
}
const { name, place, photo, important } = Astro.props;
---

<div
    class:list={[
        "item_c text-light text-center rounded-5",
        { "bg-danger": important, "bg-primary": !important },
    ]}
>
    <img src={photo} alt="object" />
    <div class="text">
        <h3 class="mt-3">
            {name}
        </h3>
        <p>{place}</p>
    </div>

    <button class="btn reclaimButton rounded-pill">Reclaim</button>
</div>
<style>
    .item_c {
        height: 20.5rem;
        overflow: hidden;
    }
    .reclaimButton {
        background-color: rgb(75, 61, 55);
        border: 1px solid transparent;
        padding: 0.3rem 0.25rem;
        font-size: 1rem;
        line-height: 1.5;
    }

    .text {
        margin: 0 1rem;
    }
    img {
        height: 10rem;
        width: 100%;
        object-fit: cover;
    }
</style>
